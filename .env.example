# Anthropic API Key for Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Email credentials for job applications (optional)
EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_email_password

# Vercel Postgres (automatically set by Vercel)
POSTGRES_URL=your_postgres_url_here
POSTGRES_PRISMA_URL=your_postgres_prisma_url_here
POSTGRES_URL_NON_POOLING=your_postgres_url_non_pooling_here

# Storage mode (file-based for local dev, database for production)
USE_FILE_STORAGE=true